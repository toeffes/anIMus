<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/ServerListelementServerIconImageView"
        android:contentDescription="@string/ServerListServerIconDesc"
        android:layout_width="40dp"
        android:layout_height="75dp"
        android:src="@drawable/jabber_disconnected" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ServerListelementServerNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ServerListelementConnectionStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="12sp" />

    </LinearLayout>
	
</LinearLayout>
